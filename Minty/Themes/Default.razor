@namespace Oqtane.Theme.Bootswatch.Minty
@inherits Oqtane.Theme.Bootswatch.Default.Default

@{ 
    base.BuildRenderTree(__builder); 
}

@code {

    public override List<Resource> Resources => GetResources();

    private List<Resource> GetResources()
    {
        var resources = base.Resources;
        resources[0] = new Resource { ResourceType = ResourceType.Stylesheet, Url = "https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.0.2/minty/bootstrap.min.css", Integrity = "sha512-6j8uDbJ77NKFw5b7wK0md8qwdIL6a2iQK5QgZggbOBEPsiE+/SmTrOWRN6NI1OltrYNx6lMTW3fbCCz8TKCr5Q==", CrossOrigin = "anonymous" };
        resources[1] = new Resource { ResourceType = ResourceType.Stylesheet, Url = ThemePath().Replace(".Minty/", "/Theme.css") };
        resources[2] = new Resource { ResourceType = ResourceType.Stylesheet, Url = ThemePath().Replace(".Minty/", "/Minty.css") };
        return resources;
    }
}
